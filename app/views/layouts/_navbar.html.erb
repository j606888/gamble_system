<nav class="navbar navbar-expand-sm navbar-dark bg-dark">
  <div>
    <% if @room&.id.present? %>
      <ul class="navbar-nav flex-row float-left">
        <li><%= link_to room_path(@room), class: "nav-link" do %><i class="big-icon fas fa-home"></i><% end %> </li>
        <li><%= link_to room_games_path(@room), class: "nav-link" do %><i class="big-icon fas fa-chart-bar"></i><% end %> </li>
        <li><%= link_to room_players_path(@room), class: "nav-link" do %><i class="big-icon fas fa-user-friends"></i><% end %> </li>
        <li><%= link_to edit_room_path(@room), class: "nav-link" do %><i class="big-icon fas fa-cog"></i><% end %> </li>
      </ul>
    <% end %>
  </div>
  <div class="mx-auto order-0">
    <% if @room&.id.present? %>
      <li class="navbar-brand mx-auto"><%= @room.name %></li>
    <% else %>
      <li class="navbar-brand mx-auto" href="#">麻將小幫手 v2.0</li>
    <% end %>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#rightNav" aria-controls="rightNav" aria-expanded="false">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="navbar-collapse collapse order-3" id="rightNav">
    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            所有群組
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <% @join_rooms.each do |room| %>
              <%= link_to room.name, room_path(room), class: "dropdown-item" %>
            <% end %>
            <%= link_to new_room_path, class:"dropdown-item" do %><i class="fas fa-plus"></i> 群組<% end %>
          </div>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="" id="userSetting" data-toggle="dropdown"  aria-haspopup="true" aria-expanded="false">
             <i class="fas fa-kiwi-bird"></i>  <%= current_user.name || current_user.email %>
          </a>
          <div class="dropdown-menu" aria-labelledby="userSetting">
            <%= link_to '幫助', helps_path, class:"dropdown-item" %>
            <%= link_to '給我點建議', advise_path, class:"dropdown-item" %>
            <%= link_to '編輯帳號', edit_user_registration_path, class:"dropdown-item" %>
            <%= link_to '登出', destroy_user_session_path, method: 'delete', class:"dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li><%= link_to '登入', new_user_session_path, class:"nav-link" %></li>
      <% end %>
    </ul>
  </div>
</nav>

<% flash.each do |key, value| %>
  <div class="<%= flash_class(key) %>">
    <%= value %>
  </div>
<% end %>

<div class="nav-space"></div>

<div class="modal hide fade" id="modal-join" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content"></div>
  </div>
</div>