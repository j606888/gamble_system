<div class="wrapper">
  <header class="nameTitle">
    <div class="nameTitle">管理玩家</div>
  </header>
  <table>
    <tr>
      <td>名稱</td>
      <td>暱稱</td>
      <td>動作</td>
    </tr>
    <% @players.each do |player| %>
      <tr>
        <th><%= player.name %></th>
        <th><%= player.nickname %></th>
        <th>
          <%= link_to '編輯', edit_liff_player_path(player.id, source_id: params[:source_id]), class: 'edit' %> &nbsp; &nbsp;   
          <% if player.hidden %>  
            <%= link_to '顯示', trigger_hidden_liff_player_path(player.id, source_id: params[:source_id]), class: 'hidden', method: :post %>
          <% else %>
            <%= link_to '隱藏', trigger_hidden_liff_player_path(player.id, source_id: params[:source_id]), class: 'show', method: :post %>
          <% end %>
        </th>
      </tr>
    <% end %>
  </table>
</div>

<%= render(partial: 'liff/init', locals: { liff_id: Setting.liff_ids.player_edit }) %>