<script>
var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: <%= raw(@chart[:labels]) %>,
        datasets: [{
            label: "<%= raw(@chart[:title]) %>",
            data: <%= raw(@chart[:data]) %>,
            backgroundColor: <%= raw(@chart[:bg_color]) %>,
            borderColor: <%= raw(@chart[:bd_color]) %>,
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});
</script>