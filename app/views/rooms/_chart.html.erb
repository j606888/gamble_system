<script>
var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: <%= raw(@chart[:labels]) %>,
        datasets: [{
            label: "<%= raw(@chart[:title]) %>",
            data: <%= raw(@chart[:data]) %>,
            backgroundColor: <%= raw(@chart[:bg_color]) %>,
            borderColor: <%= raw(@chart[:bd_color]) %>,
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});

var li = document.getElementById('myLine').getContext('2d');
var myLineChart = new Chart(li, {
    type: 'line',
    data: {
        labels: <%= raw(@line[:dates]) %>,
        datasets: [
            <% @line[:datasets].each do |dataset| %>
                {
                    data: <%= raw(dataset[:data]) %>,
                    borderColor: "<%= raw(dataset[:color]) %>",
                    fill: false,
                    label: "<%= raw(dataset[:name]) %>"
                },
            <% end %>
        ]
    },
    options: {
        elements: {
            line: {
                tension: 0.1
            }
        },
      title: {
          display: true,
          text: 'Try try'
      }
    }
});
</script>