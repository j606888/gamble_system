<%= render 'rooms/concerns/room_bar'%>

<div id="accordion">
  <div class>
    <a class="collapsed card-link" data-toggle="collapse" href="#score">總金額</a>
    <a class="collapsed card-link" data-toggle="collapse" href="#my_line">歷史走向</a>
  </div>
  <div id="score" class="collapse show" data-parent="#accordion" width="80%">
    <canvas id="myChart"></canvas>
  </div>
  <div id="my_line" class="collapse" data-parent="#accordion">
    <canvas id="myLine"></canvas>
  </div>
</div>

<%= render 'rooms/concerns/players_analyse' %>

<script>
var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: <%= raw(@chart[:labels]) %>,
        datasets: [{
            barThickness: 12,
            label: '總金額',
            data: <%= raw(@chart[:data]) %>,
            backgroundColor: <%= raw(@chart[:bg_color]) %>,
            borderWidth: 1
        }]
    },
    options: {
        maintainAspectRatio: true,
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});

var li = document.getElementById('myLine').getContext('2d');
var myLineChart = new Chart(li, {
    type: 'line',
    data: {
        labels: <%= raw(@line[:dates]) %>,
        datasets: [
            <% @line[:datasets].each do |dataset| %>
                {
                    data: <%= raw(dataset[:data]) %>,
                    borderColor: "<%= raw(dataset[:color]) %>",
                    fill: false,
                    label: "<%= raw(dataset[:name]) %>"
                },
            <% end %>
        ]
    },
    options: {
        maintainAspectRatio: true,
        elements: {
            line: {
                tension: 0.1
            }
        },
      title: {
          display: true,
          text: '金額走向'
      }
    }
});
</script>