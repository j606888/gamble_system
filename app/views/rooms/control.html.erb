<h1>Welcome to Control!</h1>
<%= form_tag(bash_update_room_roles_path(@room)) do %>
  <table class="table table-hover">
    <tr>
      <th>姓名</th>
      <th>Email</th>
      <th>Admin</th>
      <th>Helper</th>
      <th>Member</th>
    </tr>
    <% @roles_map.each do |id, value| %>
      <%= hidden_field_tag "roles[]user_id", id %>
      <tr>
        <td><%= value[:name] %></td>
        <td><%= value[:email] %></td>
        <td><%= check_box_tag 'roles[]admin', 'true', value[:admin] %></td>
        <td><%= check_box_tag 'roles[]helper', 'true', value[:helper] %></td>
        <td><%= check_box_tag 'roles[]member', 'true', value[:member] %></td>
      </tr>
    <% end %>
    <tr><td><%= submit_tag 'send' %></td></tr>
  </table>
<% end %>
<hr>
<h4>要求加入的</h4>
<table class="table table-hover">
  <tr>
    <th>姓名</th>
    <th>Email</th>
    <th colspan="2">功能</th>
  </tr>
  <tr>
    <% @user_ask.each do |user| %>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= link_to '批准', reply_ask_room_roles_path(@room, user_id: user.id, answer: 'accept'), method: :post %></td>
      <td><%= link_to '拒絕', reply_ask_room_roles_path(@room, user_id: user.id, answer: 'deny'), method: :post %></td>
    <% end %>
  </tr>
</table>

<%= link_to '返回', room_path(@room) %>